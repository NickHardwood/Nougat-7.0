package_extract_file("sickness/boot.img", "/dev/block/platform/15570000.ufs/by-name/BOOT");

ui_print("-- Rooting rom with magisk");
package_extract_dir("rootzip", "/tmp/rootzip");
run_program("/sbin/busybox", "unzip", "/tmp/rootzip/Magisk.zip", "META-INF/com/google/android/update-binary", "-d", "/tmp/rootzip");
